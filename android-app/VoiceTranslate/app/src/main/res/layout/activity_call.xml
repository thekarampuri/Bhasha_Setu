<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <!-- Transcript Panel -->
    <ScrollView
        android:id="@+id/scrollViewTranscript"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:background="@color/surface_dark"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tvCallStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/llTranscript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You:"
                android:textColor="@color/blue_light"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvYouPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Speak something..."
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Translated:"
                android:textColor="@color/blue_light"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTranslatedPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Translation will appear here"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

    <!-- Status Indicator -->
    <TextView
        android:id="@+id/tvCallStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Status: Idle"
        android:textColor="@color/gray_text"
        app:layout_constraintBottom_toTopOf="@+id/btnPushToTalk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Push-to-Talk Button -->
    <Button
        android:id="@+id/btnPushToTalk"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/blue_primary"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="ðŸŽ™ Hold to Speak"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/llControls"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/llControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnSpeaker"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Speaker"
            android:textColor="@color/white"
            app:strokeColor="@color/blue_primary" />

        <Button
            android:id="@+id/btnMute"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Mute"
            android:textColor="@color/white"
            app:strokeColor="@color/blue_primary" />

        <Button
            android:id="@+id/btnEndCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red_end_call"
            android:text="End Call"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>